				<Source><![CDATA[
[Form]
public class HMClaimTotals extends FormRun
{
    HMClaimTable        hmclaimTable;
    HMInsuranceCarrier  hmInsuranceCarrier;
}
]]></Source>
			</Method>
			<Method>
				<Name>init</Name>
				<Source><![CDATA[
    /// <summary>
    ///
    /// </summary>
    public void init()
    {
        super();

        hmInsuranceCarrier = element.args().record();

        if (!hmInsuranceCarrier)
        {
            warning("@Optum:HMClaimPayorError");
        }

        select count(RecId), sum(HMBalanceAmount) from hmclaimTable
            where hmclaimTable.HMInsuranceCarrier == hmInsuranceCarrier.RecId
                && hmclaimTable.HMBalanceAmount > 0;

        HMOpenClaims.value(hmclaimTable.RecId);
        HMAmount.realValue(hmclaimTable.HMBalanceAmount);
    }

]]></Source>
