			<Method>
				<Name>lastLineNum</Name>
				<Source><![CDATA[
    static TradeLineNumber lastLineNum(HMClaimNumber _hmClaimNumber)
    {
        return (select maxof(LineNumber) from HMClaimPaymentPosting
                    where HMClaimPaymentPosting.ClaimID == _hmClaimNumber).LineNumber;
    }

]]></Source>
