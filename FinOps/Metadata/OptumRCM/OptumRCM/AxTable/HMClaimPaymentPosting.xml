				<Name>update</Name>
				<Source><![CDATA[
    /// <summary>
    ///
    /// </summary>
    public void update()
    {
        HMClaimPaymentPosting   oldClaimPaymentPosting = this.orig();
        HMClaimTable            claim;

        super();

        if(this.Type != oldClaimPaymentPosting.Type || this.Code_Cheque != oldClaimPaymentPosting.Code_Cheque)
        {
            try
            {
                ttsbegin;

                select forupdate claim where claim.ClaimID == this.ClaimID;

                if (claim.RecId)
                {
                    claim.IsClaimModified = NoYes::Yes;
                    claim.update();
                }

                ttscommit;
            }
            catch (Exception::Deadlock)
            {
                if (xSession::currentRetryCount() >= #RetryNum)
                {
                    throw error(strFmt("@MAZ:FailedToUpdateDataOnTable", "@Optum:HMClaimPaymentPosting"));
                }
                else
                {
                    retry;
                }

            }
            catch
            {
                if (xSession::currentRetryCount() >= #RetryNum)
                {
                    throw error(strFmt("@MAZ:FailedToUpdateDataOnTable", "@Optum:HMClaimPaymentPosting"));
                }
                else
                {
                    retry;
                }
            }

        }
        
    }

