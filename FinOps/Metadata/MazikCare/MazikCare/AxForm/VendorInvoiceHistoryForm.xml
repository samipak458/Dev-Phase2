/// <summary>
/// Load invoice history data
/// </summary>
public void loadInvoiceHistory()
{
    // Refresh data from service if needed
    VendorInvoiceHistoryService::refreshInvoiceHistory();
    VendorInvoiceHistory_ds.research();
}
				]]></Source>
			</Method>
			<Method>
				<Name>applyFilter</Name>
				<Source><![CDATA[
/// <summary>
/// Apply filters based on vendor account and invoice number
/// </summary>
public void applyFilter()
{
    QueryBuildDataSource qbds;
    QueryBuildRange qbr;
    Query query;
    
    query = VendorInvoiceHistory_ds.query();
    qbds = query.dataSourceTable(tableNum(VendorInvoiceHistory));
    
    // Clear existing ranges
    qbds.clearRanges();
    
    // Apply vendor filter if specified
    if (VendorFilterEdit.text())
    {
        qbr = qbds.addRange(fieldNum(VendorInvoiceHistory, VendorAccount));
        qbr.value(VendorFilterEdit.text());
    }
    
    // Apply invoice number filter if specified
    if (InvoiceNumberFilterEdit.text())
    {
        qbr = qbds.addRange(fieldNum(VendorInvoiceHistory, InvoiceNumber));
        qbr.value(InvoiceNumberFilterEdit.text());
    }
    
    VendorInvoiceHistory_ds.executeQuery();
}
				]]></Source>
			</Method>
