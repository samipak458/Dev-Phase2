						<Name>clicked</Name>
						<Source><![CDATA[
        void clicked()
        {
            ttsBegin;
            
            select forUpdate hMCase 
                where hMCase.RecId==caserecid1;
                    
            hMCase.CaseStatus   = HMCaseStatus::OnHold;
            hmcase.HMCaseReason = ReasonTable::find(ReasonTable_Reason.valueStr()).RecId;
            hMCase.update();
             
            ttsCommit;
            
            super();
        }

]]></Source>
