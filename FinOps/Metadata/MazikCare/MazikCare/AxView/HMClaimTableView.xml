		<Methods>
			<Method>
				<Name>getClaimStatus</Name>
				<Source><![CDATA[
	public static str getClaimStatus()
    {
        str claimStatus;

        claimStatus = strFmt(@"SELECT TOP 1 CASE 
                                                WHEN CL.STATUS = 0 THEN 'Submitted'
                                                WHEN CL.STATUS = 1 THEN 'Denied'
                                                WHEN CL.STATUS = 2 THEN 'On-hold' 
                                                WHEN CL.STATUS = 3 THEN 'Paid' 
                                                WHEN CL.STATUS = 4 THEN 'Generated'
                                                WHEN CL.STATUS = 5 THEN 'Ready for submit'
                                                WHEN CL.STATUS = 6 THEN 'InReview' 
                                                WHEN CL.STATUS = 7 THEN 'Approved'
                                                ELSE 'Reversed'
                                            END AS CLAIMSTATUS 
                            FROM HMCLAIMVERSION AS CL WHERE CL.HMCLAIMTABLE = %1 ORDER BY RECID DESC",
            SysComputedColumn::returnField(tableStr(HMClaimTableView), identifierStr(HMClaimTable), fieldStr(HMClaimTable, RecId)));

        return claimStatus;
	}

]]></Source>
			</Method>
			<Method>
				<Name>getClaimStatusDate</Name>
				<Source><![CDATA[
    public static str getClaimStatusDate()
    {
        str claimStatusDate;

        claimStatusDate = strFmt(@"SELECT TOP 1 CL.CREATEDDATETIME FROM HMCLAIMVERSION AS CL WHERE CL.HMCLAIMTABLE = %1 ORDER BY RECID DESC",
            SysComputedColumn::returnField(tableStr(HMClaimTableView), identifierStr(HMClaimTable), fieldStr(HMClaimTable, RecId)));

        return claimStatusDate;
    }

]]></Source>
			</Method>
