			<Method>
				<Name>getItemRevenueCode</Name>
				<Source><![CDATA[
    public static RefRecId getItemRevenueCode(ItemId _itemId)
    {
        HMItemCptPcsCodes      codes;
        HMProcedureCodeMaster  procedureCode;
        int                    counter = 0;
        RefRecId               revenueCode, preRevenueCode;
        boolean                isFirst = true;
    
        while select codes
            where codes.ItemId == _itemId
        join procedureCode
            where procedureCode.RecId == codes.HMProcedureCodeMaster
                && procedureCode.Type == HMProcCodeSearchType::Revenue
        {
            counter++;
            revenueCode = codes.HMProcedureCodeMaster;
        }
    
        if (counter == 1)
        {
            return revenueCode;
        }
        else
        {
            return 0;
        }
    }

]]></Source>
